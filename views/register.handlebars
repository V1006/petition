<section class="registerHeader">
    <h1>Did you know ?</h1>
    <p>Over 7.9 billion people believe the earth is round</p>
</section>
<section class="register">
    <div class="registerSection">
        <h1>Register now !</h1>
        <form
            class="userData"
            id="register"
            action="/petition/register"
            method="POST"
        >
            <p>First Name</p><input
                type="text"
                value=""
                name="first_name"
                placeholder="First Name"
                required
            />
            <p>Last Name</p><input
                type="text"
                value=""
                name="last_name"
                placeholder="Last Name"
                required
            />
            <p>E-mail</p><input
                type="email"
                value=""
                name="email"
                placeholder="E-mail"
                required
            />
            <p>Password</p><input
                type="password"
                value=""
                name="password"
                placeholder="password"
                required
            />
        </form>
        <div class="signHere">
            {{#if error}}
                <p class="error">Fill out all fields</p>
            {{/if}}
            <button class="landingButtons"{{!-- id="submit" --}} type="submit" form="register">Register</button>

        </div>
    </div>
</section>
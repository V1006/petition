<section class="register">
    <div class="registerSection">
        <h1>Edit your profile</h1>
        <form
            class="userData"
            id="register"
            action="/petition/profile/edit"
            method="POST"
        >
            <div class="group">
                    <input type="text" value="{{userInfoByID.first_name}}" name="first_name" required />
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>First Name</label>
            </div>
            <div class="group">
                    <input type="text" value="{{userInfoByID.last_name}}" name="last_name" required />
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Last Name</label>
            </div>
            <div class="group">
                    <input type="text" value="{{userInfoByID.age}}" name="age"/>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Age</label>
            </div>
            <div class="group">
                    <input type="text" value="{{userInfoByID.city}}" name="city"/>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>City</label>
            </div>
            <div class="group">
                    <input type="url" value="{{userInfoByID.url}}" name="url"/>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Homepage</label>
            </div>
            
        </form>
        <div class="signHere">
            {{#if error}}
                <p class="error">Something went wrong</p>
            {{/if}}
            <button class="landingButtons"{{!-- id="submit" --}} type="submit" form="register">Update</button>
            <a href="javascript:history.back()">Back</a>

        </div>
    </div>
</section>